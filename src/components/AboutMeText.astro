<style>
    * {
        color: white;
    }
    .info {
        display: flex;
        flex-direction: column;
        
    }
    .box {
        padding: 3rem;
        padding-top: 0rem;
    }

    .links {
        display: flex;
        flex-direction: column;
    }

    .links h2 {
        font-family: "PT Seriff";
        color: white;
        font-size: 3rem;
    }

    .links a {
        color: white;
        text-decoration: none;
        font-size: 1rem;
    }


    .photos {
        position: relative;
        display: grid;
        justify-content: center;
    }



    .slideshow {
        position: relative;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        height: 400px;
        max-width: 100%;
    }
    
    .images {
        position: relative;
        display: flex;
        overflow-x: hidden;
        scroll-snap-type: x mandatory;
        scroll-behavior: smooth;
        height: 100%;
        width: 100%;
        padding-bottom: 2rem;
    }
    
    .images img {
        position: relative;
        flex: 1 0 100%;
        scroll-snap-align: start;
        object-fit: contain;
        width: 100%;
    }
    
    .slider-nav {
        position: relative;
        display: flex;
        column-gap: 0.5rem;
        bottom: 0px;
        left: 0px;
        z-index: 1;
        max-width: 100%;
        padding: 2px;
    }
    
    .slider-nav a {
        width: 0.5rem;
        height: 0.5rem;
        border-radius: 50%;
        background-color: white;
        opacity: 0.75;
        transition: opacity ease 250ms;
    }
</style>